@model List<CS308Main.Controllers.CategoryStats>

    @{
    ViewData["Title"] = "Manage Categories";
    }

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0"><i class="bi bi-tags"></i> Manage Categories</h3>
                <a asp-action="Create" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Category
                </a>
            </div>
            <div class="card-body">
                @if (Model == null || !Model.Any())
                {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No categories found. <a asp-action="Create">Create one now</a>.
                </div>
                }
                else
                {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Category Name</th>
                                <th>Description</th>
                                <th>Products Count</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in Model)
                            {
                            <tr>
                                <td><strong>@stat.Category.Name</strong></td>
                                <td>@stat.Category.Description</td>
                                <td>
                                    <span class="badge bg-info">@stat.ProductCount</span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@stat.Category.Id"
                                        class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form asp-action="Delete" method="post" class="d-inline"
                                        onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@stat.Category.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                }
            </div>
        </div>
    </div>