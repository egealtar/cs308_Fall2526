@{
    ViewData["Title"] = "User Statistics";
    var stats = ViewBag.Stats as dynamic;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-graph-up"></i> User Statistics</h2>
        </div>
    </div>

    <div class="row mt-4">
        <!-- Total Users -->
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h1 class="display-4 text-primary">@stats.TotalUsers</h1>
                    <p class="card-text">Total Users</p>
                </div>
            </div>
        </div>

        <!-- Active Users -->
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h1 class="display-4 text-success">@stats.ActiveUsers</h1>
                    <p class="card-text">Active Users</p>
                </div>
            </div>
        </div>

        <!-- Inactive Users -->
        <div class="col-md-4 mb-3">
            <div class="card text-center">
                <div class="card-body">
                    <h1 class="display-4 text-danger">@stats.InactiveUsers</h1>
                    <p class="card-text">Inactive Users</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Role Distribution -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Role Distribution</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Role</th>
                                    <th>Count</th>
                                    <th>Percentage</th>
                                    <th>Visual</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var roleDist = stats.RoleDistribution as Dictionary<string, int>;
                                    var total = stats.TotalUsers;
                                }
                                @foreach (var role in roleDist)
                                {
                                    var percentage = total > 0 ? (role.Value * 100.0 / total) : 0;
                                    <tr>
                                        <td><strong>@role.Key</strong></td>
                                        <td>@role.Value</td>
                                        <td>@percentage.ToString("F1")%</td>
                                        <td>
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar" role="progressbar" 
                                                     style="width: @percentage%" 
                                                     aria-valuenow="@percentage" 
                                                     aria-valuemin="0" 
                                                     aria-valuemax="100">
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Registrations -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Recent Registrations</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Role</th>
                                    <th>Registered</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var recent = stats.RecentRegistrations as List<dynamic>;
                                }
                                @if (recent != null && recent.Any())
                                {
                                    @foreach (var user in recent)
                                    {
                                        <tr>
                                            <td>@user.Name</td>
                                            <td>@user.Email</td>
                                            <td><span class="badge bg-info">@user.Role</span></td>
                                            <td>@user.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">No recent registrations</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to User Management
            </a>
        </div>
    </div>
</div>

