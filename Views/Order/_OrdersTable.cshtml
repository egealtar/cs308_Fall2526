@model List<CS308Main.Models.Order>

@if (!Model.Any())
{
    <div class="alert alert-secondary">
        <i class="bi bi-inbox"></i> No orders in this category.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>
                            <small class="font-monospace">@order.Id.Substring(0, 8)...</small>
                        </td>
                        <td>
                            <small>@order.UserId.Substring(0, 8)...</small>
                        </td>
                        <td>
                            <small>@order.CreatedAt.ToString("MMM dd, yyyy")</small><br />
                            <small class="text-muted">@order.CreatedAt.ToString("HH:mm")</small>
                        </td>
                        <td>@order.Items.Count</td>
                        <td><strong>$@order.TotalPrice.ToString("F2")</strong></td>
                        <td>
                            @if (order.Status == "Processing")
                            {
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-clock-history"></i> Processing
                                </span>
                            }
                            else if (order.Status == "In-Transit")
                            {
                                <span class="badge bg-info">
                                    <i class="bi bi-truck"></i> In-Transit
                                </span>
                            }
                            else if (order.Status == "Delivered")
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Delivered
                                </span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (order.Status == "Processing")
                                {
                                    <form asp-controller="Order" asp-action="UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <input type="hidden" name="status" value="In-Transit" />
                                        <button type="submit" class="btn btn-sm btn-info" 
                                                title="Mark as In-Transit"
                                                onclick="return confirm('Mark this order as In-Transit?')">
                                            <i class="bi bi-truck"></i> Ship
                                        </button>
                                    </form>
                                }
                                
                                @if (order.Status == "In-Transit")
                                {
                                    <form asp-controller="Order" asp-action="UpdateStatus" method="post" class="d-inline">
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <input type="hidden" name="status" value="Delivered" />
                                        <button type="submit" class="btn btn-sm btn-success" 
                                                title="Mark as Delivered"
                                                onclick="return confirm('Mark this order as Delivered?')">
                                            <i class="bi bi-check-circle"></i> Deliver
                                        </button>
                                    </form>
                                }
                                
                                <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" 
                                   class="btn btn-sm btn-primary" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}