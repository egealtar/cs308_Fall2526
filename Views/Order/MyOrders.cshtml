@model List<CS308Main.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">
                <i class="bi bi-bag"></i> My Orders
            </h3>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-info-circle" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">You don't have any orders yet.</h4>
                    <p>Start shopping to place your first order!</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-shop"></i> Start Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Order ID</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <strong class="font-monospace">@order.Id.Substring(0, 8)...</strong>
                                    </td>
                                    <td>
                                        <small>@order.CreatedAt.ToString("MMM dd, yyyy")</small><br />
                                        <small class="text-muted">@order.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>@order.Items.Count item(s)</td>
                                    <td><strong class="text-success">$@order.TotalPrice.ToString("F2")</strong></td>
                                    <td>
                                        @if (order.Status == "Processing")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock-history"></i> Processing
                                            </span>
                                        }
                                        else if (order.Status == "In-Transit")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-truck"></i> In-Transit
                                            </span>
                                        }
                                        else if (order.Status == "Delivered")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Delivered
                                            </span>
                                        }
                                        else if (order.Status == "Cancelled")
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Cancelled
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@order.Id" 
                                               class="btn btn-sm btn-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            
                                            @if (order.Status == "Delivered")
                                            {
                                                <a asp-controller="Invoice" asp-action="Generate" asp-route-orderId="@order.Id" 
                                                   class="btn btn-sm btn-success" title="Download Invoice">
                                                    <i class="bi bi-file-earmark-text"></i>
                                                </a>
                                            }
                                            
                                            @if (order.Status == "Processing")
                                            {
                                                <form asp-action="Cancel" asp-route-id="@order.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" 
                                                            onclick="return confirm('Are you sure you want to cancel this order?')"
                                                            title="Cancel Order">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </form>
                                            }
                                            
                                            @if (order.Status == "Delivered")
                                            {
                                                var daysSincePurchase = (DateTime.UtcNow - order.CreatedAt).TotalDays;
                                                @if (daysSincePurchase <= 30)
                                                {
                                                    <a asp-action="RequestRefund" asp-route-orderId="@order.Id" 
                                                       class="btn btn-sm btn-warning" title="Request Refund">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </a>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Order Status Legend -->
                <div class="alert alert-light mt-3">
                    <h6 class="fw-bold">Order Status Guide:</h6>
                    <div class="row">
                        <div class="col-md-3">
                            <span class="badge bg-warning text-dark">Processing</span> - Order is being prepared
                        </div>
                        <div class="col-md-3">
                            <span class="badge bg-info">In-Transit</span> - Order is on the way
                        </div>
                        <div class="col-md-3">
                            <span class="badge bg-success">Delivered</span> - Order has been delivered
                        </div>
                        <div class="col-md-3">
                            <span class="badge bg-secondary">Cancelled</span> - Order has been cancelled
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>