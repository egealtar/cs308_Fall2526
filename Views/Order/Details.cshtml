@model CS308Main.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Order Details</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Order ID:</div>
                        <div class="col-md-8">@Model.Id</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Order Date:</div>
                        <div class="col-md-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">
                            @if (Model.Status == "Processing")
                            {
                                <span class="badge bg-warning text-dark">@Model.Status</span>
                            }
                            else if (Model.Status == "In-Transit")
                            {
                                <span class="badge bg-info">@Model.Status</span>
                            }
                            else if (Model.Status == "Delivered")
                            {
                                <span class="badge bg-success">@Model.Status</span>
                            }
                            else if (Model.Status == "Cancelled")
                            {
                                <span class="badge bg-secondary">@Model.Status</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Shipping Address:</div>
                        <div class="col-md-8">@Model.ShippingAddress</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Payment Method:</div>
                        <div class="col-md-8">@Model.PaymentMethod</div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Order Items</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.Price.ToString("F2")</td>
                                        <td>$@((item.Price * item.Quantity).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="fw-bold text-success">$@Model.TotalPrice.ToString("F2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        @if (User.IsInRole("Customer"))
                        {
                            <a asp-action="MyOrders" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Order" asp-action="AllOrders" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                        }
                        <div>
                            @if (Model.Status == "Delivered")
                            {
                                @if (User.IsInRole("Customer"))
                                {
                                    var daysSincePurchase = (DateTime.UtcNow - Model.CreatedAt).TotalDays;
                                    @if (daysSincePurchase <= 30)
                                    {
                                        <a asp-action="RequestRefund" asp-route-orderId="@Model.Id" 
                                           class="btn btn-warning me-2">
                                            <i class="bi bi-arrow-counterclockwise"></i> Request Refund
                                        </a>
                                    }
                                }
                                <a asp-controller="Invoice" asp-action="Generate" asp-route-orderId="@Model.Id" 
                                   class="btn btn-success">
                                    <i class="bi bi-file-earmark-text"></i> Generate Invoice
                                </a>
                            }
                            else if (Model.Status == "Processing" && User.IsInRole("Customer"))
                            {
                                <form asp-action="Cancel" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you sure you want to cancel this order?')">
                                        <i class="bi bi-x-circle"></i> Cancel Order
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>