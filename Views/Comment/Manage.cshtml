@model List<CS308Main.Controllers.CommentViewModel>

@{
    ViewData["Title"] = "Manage Comments";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning">
            <h3 class="mb-0">Pending Comments Approval</h3>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No pending comments to approve.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Product</th>
                                <th>User</th>
                                <th>Comment</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.ProductName</strong><br />
                                        <small class="text-muted">ID: @item.Comment.ProductId</small>
                                    </td>
                                    <td>
                                        <strong>@item.Comment.UserName</strong><br />
                                        <small class="text-muted">@item.Comment.UserId</small>
                                    </td>
                                    <td>
                                        <p class="mb-0">@item.Comment.Text</p>
                                    </td>
                                    <td>
                                        <small>@item.Comment.CreatedAt.ToString("MMM dd, yyyy")</small><br />
                                        <small class="text-muted">@item.Comment.CreatedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <form asp-action="ApproveComment" method="post" class="d-inline">
                                            <input type="hidden" name="commentId" value="@item.Comment.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="bi bi-check-circle"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-action="RejectComment" method="post" class="d-inline">
                                            <input type="hidden" name="commentId" value="@item.Comment.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" 
                                                    onclick="return confirm('Are you sure you want to reject this comment?')">
                                                <i class="bi bi-x-circle"></i> Reject
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>