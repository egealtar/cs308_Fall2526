<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotorMatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-car-front-fill"></i> MotorMatch
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (!User.IsInRole("SupportAgent"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house"></i> Home
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Customer") || !User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Directory">
                                    <i class="bi bi-grid"></i> Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ShoppingCart" asp-action="Index">
                                    <i class="bi bi-cart"></i> Cart
                                </a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            @if (User.IsInRole("ProductManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Comment" asp-action="Manage">
                                        <i class="bi bi-chat-square-text"></i> Manage Comments
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Stock" asp-action="Index">
                                        <i class="bi bi-box-seam"></i> Stock
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Delivery" asp-action="Index">
                                        <i class="bi bi-truck"></i> Deliveries
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Category" asp-action="Index">
                                        <i class="bi bi-tags"></i> Categories
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Invoice" asp-action="AllInvoices">
                                        <i class="bi bi-file-earmark-text"></i> Invoices
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("SalesManager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Order" asp-action="AllOrders">
                                        <i class="bi bi-clipboard-data"></i> All Orders
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Refund" asp-action="Index">
                                        <i class="bi bi-arrow-counterclockwise"></i> Refunds
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Discount" asp-action="Index">
                                        <i class="bi bi-tag-fill"></i> Discounts
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Invoice" asp-action="AllInvoices">
                                        <i class="bi bi-file-earmark-text"></i> Invoices
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Invoice" asp-action="RevenueReport">
                                        <i class="bi bi-graph-up"></i> Revenue Report
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("SupportAgent"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="SupportChat" asp-action="Index">
                                        <i class="bi bi-headset"></i> Support Chat
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                        <i class="bi bi-shield-check"></i> User Management
                                    </a>
                                </li>
                            }
                            
                            @if (User.IsInRole("Customer"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="WishList" asp-action="Index">
                                        <i class="bi bi-heart"></i> Wish List
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Order" asp-action="MyOrders">
                                        <i class="bi bi-bag"></i> My Orders
                                    </a>
                                </li>
                            }
                            
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="bi bi-person"></i> Profile
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Customer"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="WishList" asp-action="Index">
                                                <i class="bi bi-heart"></i> My Wish List
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="MyOrders">
                                                <i class="bi bi-bag"></i> My Orders
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Invoice" asp-action="MyInvoices">
                                                <i class="bi bi-file-earmark-text"></i> My Invoices
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("SalesManager"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Discount" asp-action="Index">
                                                <i class="bi bi-tag-fill"></i> Manage Discounts
                                            </a>
                                        </li>
                                    }
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-shield-check"></i> User Management
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Statistics">
                                                <i class="bi bi-graph-up"></i> Statistics
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MotorMatch - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <!-- Chat Widget (visible on all pages except chat pages) -->
    @if (!Context.Request.Path.StartsWithSegments("/Chat") && !Context.Request.Path.StartsWithSegments("/SupportChat"))
    {
        <div id="chatWidget" class="chat-widget">
            <button id="chatWidgetToggle" class="chat-widget-toggle btn btn-primary rounded-circle shadow-lg position-relative">
                <i class="bi bi-chat-dots-fill"></i>
                <span id="chatNotificationBadge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none">
                    0
                </span>
            </button>
            <div id="chatWidgetPanel" class="chat-widget-panel d-none">
                <div class="chat-widget-header">
                    <h6 class="mb-0"><i class="bi bi-headset"></i> Need Help?</h6>
                    <button id="chatWidgetClose" class="btn btn-sm btn-link text-white">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="chat-widget-body">
                    <p class="mb-3">Start a conversation with our support team!</p>
                    <a asp-controller="Chat" asp-action="Index" class="btn btn-primary w-100">
                        <i class="bi bi-chat-left-text"></i> Start Chat
                    </a>
                </div>
            </div>
        </div>
    }
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/chat-widget.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>