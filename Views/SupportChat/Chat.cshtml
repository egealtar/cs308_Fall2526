@{
    ViewData["Title"] = "Support Chat";
    var chat = ViewBag.Chat as CS308Main.Models.Chat;
    var messages = ViewBag.Messages as List<CS308Main.Models.ChatMessage> ?? new List<CS308Main.Models.ChatMessage>();
    var customerDetails = ViewBag.CustomerDetails as CS308Main.Controllers.CustomerDetails;
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="bi bi-chat-dots"></i> Chat with @chat.CustomerName
                    </h4>
                    <form asp-action="CloseChat" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="chatId" value="@chat.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">
                            <i class="bi bi-x-circle"></i> Close Chat
                        </button>
                    </form>
                </div>
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Chat Messages Area -->
                        <div class="col-md-8">
                            <div id="chatMessages" class="chat-messages p-3" style="height: 500px; overflow-y: auto; background-color: #f8f9fa;">
                                @foreach (var message in messages)
                                {
                                    <div class="message mb-3 @(message.SenderType == "Customer" || message.SenderType == "Guest" ? "message-customer" : message.SenderType == "Agent" ? "message-agent" : "message-system")">
                                        <div class="d-flex @(message.SenderType == "Customer" || message.SenderType == "Guest" ? "justify-content-end" : "")">
                                            <div class="message-bubble @(message.SenderType == "Customer" || message.SenderType == "Guest" ? "bg-primary text-white" : message.SenderType == "Agent" ? "bg-light" : "bg-secondary text-white")" style="max-width: 70%; padding: 10px; border-radius: 10px;">
                                                <div class="message-header" style="font-size: 0.85em; opacity: 0.8; margin-bottom: 5px;">
                                                    @message.SenderName
                                                    @if (message.SenderType == "Agent")
                                                    {
                                                        <span class="badge bg-info">Agent</span>
                                                    }
                                                </div>
                                                <div class="message-content">@message.Content</div>
                                                @if (message.Attachments != null && message.Attachments.Any())
                                                {
                                                    <div class="message-attachments mt-2">
                                                        @foreach (var attachment in message.Attachments)
                                                        {
                                                            <div class="attachment-item">
                                                                <a href="@attachment.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary">
                                                                    <i class="bi bi-paperclip"></i> @attachment.FileName
                                                                    <small>(@((attachment.FileSize / 1024.0).ToString("F2")) KB)</small>
                                                                </a>
                                                            </div>
                                                        }
                                                    </div>
                                                }
                                                <div class="message-time" style="font-size: 0.75em; opacity: 0.7; margin-top: 5px;">
                                                    @message.CreatedAt.ToString("HH:mm")
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="chat-input p-3 border-top">
                                <form id="chatForm" enctype="multipart/form-data">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="chatId" value="@chat.Id" />
                                    <div class="input-group">
                                        <input type="file" id="fileInput" class="form-control" accept=".pdf,.jpg,.jpeg,.png,.gif,.mp4,.mov,.avi" style="max-width: 200px;" />
                                        <input type="text" id="messageInput" name="content" class="form-control" placeholder="Type your message..." />
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-send"></i> Send
                                        </button>
                                    </div>
                                    <div id="filePreview" class="mt-2"></div>
                                </form>
                            </div>
                        </div>
                        <!-- Customer Details Sidebar -->
                        <div class="col-md-4 border-start">
                            <div class="p-3" style="max-height: 600px; overflow-y: auto;">
                                <h5><i class="bi bi-person-circle"></i> Customer Information</h5>
                                @if (customerDetails != null)
                                {
                                    <!-- Basic Info -->
                                    <div class="card mb-3">
                                        <div class="card-body p-2">
                                            <h6 class="card-title"><i class="bi bi-info-circle"></i> Contact</h6>
                                            <small>
                                                <strong>Name:</strong> @customerDetails.Name<br />
                                                <strong>Email:</strong> <a href="mailto:@customerDetails.Email">@customerDetails.Email</a><br />
                                                <strong>Address:</strong> @customerDetails.HomeAddress
                                            </small>
                                        </div>
                                    </div>

                                    <!-- Shopping Cart -->
                                    @if (customerDetails.CartItems != null && customerDetails.CartItems.Any())
                                    {
                                        <div class="card mb-3">
                                            <div class="card-header bg-warning text-dark p-2">
                                                <h6 class="mb-0"><i class="bi bi-cart"></i> Shopping Cart (@customerDetails.CartItemCount items)</h6>
                                            </div>
                                            <div class="card-body p-2">
                                                <div style="max-height: 150px; overflow-y: auto;">
                                                    @foreach (var item in customerDetails.CartItems)
                                                    {
                                                        <div class="mb-2 pb-2 border-bottom">
                                                            <small>
                                                                <strong>@item.ProductName</strong><br />
                                                                Quantity: @item.Quantity | Price: $@item.Price.ToString("F2")<br />
                                                                @if (!item.IsAvailable)
                                                                {
                                                                    <span class="badge bg-danger">Out of Stock</span>
                                                                }
                                                            </small>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <!-- Wish List -->
                                    @if (customerDetails.WishListItems != null && customerDetails.WishListItems.Any())
                                    {
                                        <div class="card mb-3">
                                            <div class="card-header bg-danger text-white p-2">
                                                <h6 class="mb-0"><i class="bi bi-heart"></i> Wish List (@customerDetails.WishListItemCount items)</h6>
                                            </div>
                                            <div class="card-body p-2">
                                                <div style="max-height: 150px; overflow-y: auto;">
                                                    @foreach (var item in customerDetails.WishListItems)
                                                    {
                                                        <div class="mb-2 pb-2 border-bottom">
                                                            <small>
                                                                <strong>@item.ProductName</strong><br />
                                                                Price: $@(item.DiscountedPrice ?? item.Price).ToString("F2")
                                                                @if (item.DiscountedPrice.HasValue)
                                                                {
                                                                    <span class="text-decoration-line-through text-muted">$@item.Price.ToString("F2")</span>
                                                                }
                                                                <br />
                                                                @if (item.IsAvailable)
                                                                {
                                                                    <span class="badge bg-success">Available</span>
                                                                }
                                                                else
                                                                {
                                                                    <span class="badge bg-danger">Out of Stock</span>
                                                                }
                                                                <br />
                                                                <em class="text-muted">Added: @item.AddedAt.ToString("MMM dd, yyyy")</em>
                                                            </small>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }

                                    <!-- Orders -->
                                    @if (customerDetails.Orders.Any())
                                    {
                                        <div class="card mb-3">
                                            <div class="card-header bg-primary text-white p-2">
                                                <h6 class="mb-0"><i class="bi bi-bag"></i> Orders (@customerDetails.Orders.Count)</h6>
                                            </div>
                                            <div class="card-body p-2">
                                                <div style="max-height: 300px; overflow-y: auto;">
                                                    @foreach (var order in customerDetails.Orders)
                                                    {
                                                        var statusBadgeClass = order.Status switch
                                                        {
                                                            "Delivered" => "bg-success",
                                                            "In-Transit" => "bg-warning",
                                                            "Processing" => "bg-info",
                                                            _ => "bg-secondary"
                                                        };
                                                        
                                                        <div class="card mb-2">
                                                            <div class="card-body p-2">
                                                                <div class="d-flex justify-content-between align-items-start mb-2">
                                                                    <strong>Order #@order.Id.Substring(0, 8)</strong>
                                                                    <span class="badge @statusBadgeClass">@order.Status</span>
                                                                </div>
                                                                <small>
                                                                    <strong>Total:</strong> $@order.TotalPrice.ToString("F2")<br />
                                                                    <strong>Date:</strong> @order.CreatedAt.ToString("MMM dd, yyyy")<br />
                                                                    @if (order.Status == "In-Transit" || order.Status == "Delivered")
                                                                    {
                                                                        <strong>Updated:</strong> @order.UpdatedAt.ToString("MMM dd, yyyy")<br />
                                                                    }
                                                                    @if (!string.IsNullOrEmpty(order.PaymentMethod))
                                                                    {
                                                                        <strong>Payment:</strong> @order.PaymentMethod<br />
                                                                    }
                                                                    @if (!string.IsNullOrEmpty(order.ShippingAddress))
                                                                    {
                                                                        <strong>Shipping:</strong> @order.ShippingAddress<br />
                                                                    }
                                                                    @if (order.Items.Any())
                                                                    {
                                                                        <details class="mt-2">
                                                                            <summary class="text-primary" style="cursor: pointer;">Items (@order.Items.Count)</summary>
                                                                            <ul class="mt-1 mb-0">
                                                                                @foreach (var orderItem in order.Items)
                                                                                {
                                                                                    <li>@orderItem.ProductName (Qty: @orderItem.Quantity) - $@orderItem.Price.ToString("F2")</li>
                                                                                }
                                                                            </ul>
                                                                        </details>
                                                                    }
                                                                </small>
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle"></i> Customer is a guest user. No account information available.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.0/signalr.min.js"></script>
    <script src="~/js/support-chat.js"></script>
}

