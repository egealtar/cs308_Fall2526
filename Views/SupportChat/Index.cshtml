@{
    ViewData["Title"] = "Support Chat Queue";
    var waitingChats = ViewBag.WaitingChats as List<CS308Main.Models.Chat> ?? new List<CS308Main.Models.Chat>();
    var activeChats = ViewBag.ActiveChats as List<CS308Main.Models.Chat> ?? new List<CS308Main.Models.Chat>();
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h2><i class="bi bi-headset"></i> Support Chat Management</h2>
        </div>
    </div>
    <div class="row mt-4">
        <!-- Waiting Queue -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history"></i> Waiting Queue (@waitingChats.Count)
                    </h5>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (waitingChats.Any())
                    {
                        @foreach (var chat in waitingChats)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h6>@chat.CustomerName</h6>
                                    <p class="text-muted mb-2">
                                        @if (!string.IsNullOrEmpty(chat.CustomerEmail))
                                        {
                                            <i class="bi bi-envelope"></i> @chat.CustomerEmail<br />
                                        }
                                        <small>Started: @chat.CreatedAt.ToString("MMM dd, HH:mm")</small>
                                    </p>
                                    <form asp-action="ClaimChat" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="chatId" value="@chat.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="bi bi-hand-thumbs-up"></i> Claim Chat
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No chats waiting in queue.</p>
                    }
                </div>
            </div>
        </div>
        <!-- Active Chats -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-chat-dots-fill"></i> Active Chats (@activeChats.Count)
                    </h5>
                </div>
                <div class="card-body" style="max-height: 600px; overflow-y: auto;">
                    @if (activeChats.Any())
                    {
                        @foreach (var chat in activeChats)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h6>@chat.CustomerName</h6>
                                    <p class="text-muted mb-2">
                                        @if (!string.IsNullOrEmpty(chat.CustomerEmail))
                                        {
                                            <i class="bi bi-envelope"></i> @chat.CustomerEmail<br />
                                        }
                                        <small>
                                            Last message: @(chat.LastMessageAt?.ToString("MMM dd, HH:mm") ?? chat.CreatedAt.ToString("MMM dd, HH:mm"))
                                        </small>
                                    </p>
                                    <a asp-action="Chat" asp-route-chatId="@chat.Id" class="btn btn-success btn-sm">
                                        <i class="bi bi-chat-left-text"></i> Open Chat
                                    </a>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No active chats.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

