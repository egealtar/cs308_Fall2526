@model List<CS308Main.Models.Discount>

@{
    ViewData["Title"] = "Discount Management";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="bi bi-tag-fill"></i> Discount Management
                </h3>
                <a asp-action="Create" class="btn btn-light">
                    <i class="bi bi-plus-circle"></i> Create New Discount
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-tag" style="font-size: 4rem;"></i>
                    <h4 class="mt-3">No discounts created yet</h4>
                    <p class="text-muted">Create your first discount campaign to boost sales!</p>
                    <a asp-action="Create" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle"></i> Create Discount
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Discount ID</th>
                                <th>Products</th>
                                <th>Percentage</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var discount in Model)
                            {
                                <tr>
                                    <td>
                                        <small class="font-monospace">@discount.Id.Substring(0, 8)...</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@discount.ProductIds.Count product(s)</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-danger fs-6">@discount.DiscountPercentage%</span>
                                    </td>
                                    <td>
                                        <small>@discount.StartDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <small>@discount.EndDate.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (discount.IsActive)
                                        {
                                            if (DateTime.Now >= discount.StartDate && DateTime.Now <= discount.EndDate)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Active
                                                </span>
                                            }
                                            else if (DateTime.Now < discount.StartDate)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-clock"></i> Scheduled
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-calendar-x"></i> Expired
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-dark">
                                                <i class="bi bi-x-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@discount.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (discount.IsActive)
                                        {
                                            <form asp-action="Deactivate" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@discount.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        onclick="return confirm('Are you sure you want to deactivate this discount?')">
                                                    <i class="bi bi-x-circle"></i> Deactivate
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Deactivated</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Info Box -->
    <div class="alert alert-light border mt-4">
        <h6 class="fw-bold">
            <i class="bi bi-info-circle"></i> About Discounts
        </h6>
        <ul class="mb-0">
            <li>Discounts are automatically applied to selected products</li>
            <li>Users with products in their wish list will receive email notifications</li>
            <li>Active discounts can be deactivated at any time</li>
            <li>Expired discounts are automatically removed from products</li>
        </ul>
    </div>
</div>