@model CS308Main.Models.RefundRequest

@{
    ViewData["Title"] = "Refund Request Details";
    var order = ViewBag.Order as CS308Main.Models.Order;
    var user = ViewBag.User as CS308Main.Models.User;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Refund Request Details</h3>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- Request Information -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Request Information</h5>
                            <p><strong>Request ID:</strong> @Model.Id</p>
                            <p><strong>Status:</strong> 
                                @if (Model.Status == "Pending")
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else if (Model.Status == "Approved")
                                {
                                    <span class="badge bg-info">Approved</span>
                                }
                                else if (Model.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else if (Model.Status == "Completed")
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                            </p>
                            <p><strong>Requested At:</strong> @Model.RequestedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                            @if (Model.ReviewedAt.HasValue)
                            {
                                <p><strong>Reviewed At:</strong> @Model.ReviewedAt.Value.ToString("MMMM dd, yyyy HH:mm")</p>
                            }
                            @if (Model.CompletedAt.HasValue)
                            {
                                <p><strong>Completed At:</strong> @Model.CompletedAt.Value.ToString("MMMM dd, yyyy HH:mm")</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <h5>Order Information</h5>
                            <p><strong>Order ID:</strong> @Model.OrderId</p>
                            @if (order != null)
                            {
                                <p><strong>Order Date:</strong> @order.CreatedAt.ToString("MMMM dd, yyyy")</p>
                                <p><strong>Order Total:</strong> $@order.TotalPrice.ToString("F2")</p>
                            }
                        </div>
                    </div>

                    <!-- Customer Information -->
                    @if (user != null)
                    {
                        <div class="mb-4">
                            <h5>Customer Information</h5>
                            <p><strong>Name:</strong> @user.Name</p>
                            <p><strong>Email:</strong> @user.Email</p>
                        </div>
                    }

                    <!-- Refund Items -->
                    <div class="mb-4">
                        <h5>Items to Refund</h5>
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th>Quantity</th>
                                        <th>Price (at purchase)</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>@item.ProductName</td>
                                            <td>@item.Quantity</td>
                                            <td>$@item.Price.ToString("F2")</td>
                                            <td>$@item.Subtotal.ToString("F2")</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr class="table-light">
                                        <td colspan="3" class="text-end fw-bold">Total Refund Amount:</td>
                                        <td class="fw-bold text-success">$@Model.TotalRefundAmount.ToString("F2")</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>

                    <!-- Reason -->
                    @if (!string.IsNullOrEmpty(Model.Reason))
                    {
                        <div class="mb-4">
                            <h5>Reason</h5>
                            <p>@Model.Reason</p>
                        </div>
                    }

                    <!-- Rejection Reason -->
                    @if (!string.IsNullOrEmpty(Model.RejectionReason))
                    {
                        <div class="mb-4">
                            <h5>Rejection Reason</h5>
                            <p class="text-danger">@Model.RejectionReason</p>
                        </div>
                    }

                    <hr />

                    <!-- Actions -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            @if (Model.Status == "Pending")
                            {
                                <button type="button" class="btn btn-danger me-2" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                    <i class="bi bi-x-circle"></i> Reject
                                </button>
                                <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-info" 
                                            onclick="return confirm('Approve this refund request? The product must be received back before completing the refund.')">
                                        <i class="bi bi-check-circle"></i> Approve
                                    </button>
                                </form>
                            }
                            else if (Model.Status == "Approved")
                            {
                                <form asp-action="Complete" asp-route-id="@Model.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-success" 
                                            onclick="return confirm('Complete this refund? Products will be restored to stock and customer will be notified.')">
                                        <i class="bi bi-check-circle-fill"></i> Complete Refund
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reject Refund Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Reject" asp-route-id="@Model.Id" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">Rejection Reason</label>
                        <textarea name="rejectionReason" id="rejectionReason" class="form-control" rows="3" required
                                  placeholder="Please provide a reason for rejecting this refund request..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Reject Request</button>
                </div>
            </form>
        </div>
    </div>
</div>

