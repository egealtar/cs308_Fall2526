@{
    ViewData["Title"] = "Delivery List";
    var deliveryList = ViewBag.DeliveryList as List<CS308Main.Controllers.DeliveryListItem> ?? new List<CS308Main.Controllers.DeliveryListItem>();
    var dateFrom = ViewBag.DateFrom as string;
    var dateTo = ViewBag.DateTo as string;
    var currentStatus = ViewBag.CurrentStatus as string;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-4">
                <i class="bi bi-list-ul"></i> Delivery List
            </h2>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card shadow mb-4">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="Processing" selected="@(currentStatus == "Processing")">Processing</option>
                        <option value="In-Transit" selected="@(currentStatus == "In-Transit")">In-Transit</option>
                        <option value="Delivered" selected="@(currentStatus == "Delivered")">Delivered</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date From</label>
                    <input type="date" name="dateFrom" class="form-control" value="@dateFrom" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Date To</label>
                    <input type="date" name="dateTo" class="form-control" value="@dateTo" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Apply Filters
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!deliveryList.Any())
    {
        <div class="alert alert-info text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem;"></i>
            <h4 class="mt-3">No delivery items found.</h4>
            <p>No deliveries match the selected filters.</p>
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-list-check"></i> Delivery Items (@deliveryList.Count)
                </h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Delivery ID</th>
                                <th>Customer ID</th>
                                <th>Customer Name</th>
                                <th>Product ID</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Total Price</th>
                                <th>Delivery Address</th>
                                <th>Status</th>
                                <th>Completed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in deliveryList)
                            {
                                <tr>
                                    <td>
                                        <small class="font-monospace text-primary">
                                            @item.DeliveryId.Substring(0, 8)...
                                        </small>
                                    </td>
                                    <td>
                                        <small class="font-monospace">
                                            @item.CustomerId.Substring(0, 8)...
                                        </small>
                                    </td>
                                    <td>@item.CustomerName</td>
                                    <td>
                                        <small class="font-monospace">
                                            @item.ProductId.Substring(0, 8)...
                                        </small>
                                    </td>
                                    <td><strong>@item.ProductName</strong></td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Quantity</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">$@item.TotalPrice.ToString("F2")</strong>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@item.DeliveryAddress">
                                            <i class="bi bi-geo-alt"></i>
                                            <small>@item.DeliveryAddress</small>
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.OrderStatus == "Processing")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock-history"></i> Processing
                                            </span>
                                        }
                                        else if (item.OrderStatus == "In-Transit")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-truck"></i> In-Transit
                                            </span>
                                        }
                                        else if (item.OrderStatus == "Delivered")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Delivered
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsCompleted)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-x-circle"></i> No
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            @if (item.OrderStatus == "Processing")
                                            {
                                                <form asp-action="UpdateDeliveryStatus" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="orderId" value="@item.DeliveryId" />
                                                    <input type="hidden" name="status" value="In-Transit" />
                                                    <button type="submit" class="btn btn-sm btn-info" 
                                                            title="Start Delivery"
                                                            onclick="return confirm('Start delivery for this order?')">
                                                        <i class="bi bi-truck"></i> Ship
                                                    </button>
                                                </form>
                                            }
                                            
                                            @if (item.OrderStatus == "In-Transit")
                                            {
                                                <form asp-action="UpdateDeliveryStatus" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="orderId" value="@item.DeliveryId" />
                                                    <input type="hidden" name="status" value="Delivered" />
                                                    <button type="submit" class="btn btn-sm btn-success" 
                                                            title="Confirm Delivery"
                                                            onclick="return confirm('Confirm that this order has been delivered?')">
                                                        <i class="bi bi-check-circle"></i> Deliver
                                                    </button>
                                                </form>
                                            }
                                            
                                            <a asp-action="DeliveryDetails" asp-route-id="@item.DeliveryId" 
                                               class="btn btn-sm btn-primary" title="View Full Details">
                                                <i class="bi bi-eye"></i> Details
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>