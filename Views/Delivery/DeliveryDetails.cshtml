@model CS308Main.Models.Order

@{
    ViewData["Title"] = "Delivery Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">
                        <i class="bi bi-truck"></i> Delivery Details
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Order ID:</div>
                        <div class="col-md-8">
                            <span class="font-monospace">@Model.Id</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Order Date:</div>
                        <div class="col-md-8">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Customer ID:</div>
                        <div class="col-md-8">
                            <span class="font-monospace">@Model.UserId</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Delivery Address:</div>
                        <div class="col-md-8">
                            <strong>@Model.ShippingAddress</strong>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Payment Method:</div>
                        <div class="col-md-8">@Model.PaymentMethod</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">
                            @if (Model.Status == "Processing")
                            {
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="bi bi-clock-history"></i> Processing
                                </span>
                            }
                            else if (Model.Status == "In-Transit")
                            {
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-truck"></i> In-Transit
                                </span>
                            }
                            else if (Model.Status == "Delivered")
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle"></i> Delivered
                                </span>
                            }
                        </div>
                    </div>

                    <hr class="my-4" />

                    <h5 class="mb-3">Order Items</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>@item.ProductName</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.Price.ToString("F2")</td>
                                        <td>$@((item.Price * item.Quantity).ToString("F2"))</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-light">
                                    <td colspan="3" class="text-end fw-bold">Total:</td>
                                    <td class="fw-bold text-success">$@Model.TotalPrice.ToString("F2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Deliveries
                        </a>
                        
                        @if (Model.Status == "Processing")
                        {
                            <form asp-action="UpdateDeliveryStatus" method="post" class="d-inline">
                                <input type="hidden" name="orderId" value="@Model.Id" />
                                <input type="hidden" name="status" value="In-Transit" />
                                <button type="submit" class="btn btn-info" 
                                        onclick="return confirm('Ship this order?')">
                                    <i class="bi bi-truck"></i> Ship Order
                                </button>
                            </form>
                        }
                        
                        @if (Model.Status == "In-Transit")
                        {
                            <form asp-action="UpdateDeliveryStatus" method="post" class="d-inline">
                                <input type="hidden" name="orderId" value="@Model.Id" />
                                <input type="hidden" name="status" value="Delivered" />
                                <button type="submit" class="btn btn-success" 
                                        onclick="return confirm('Confirm delivery?')">
                                    <i class="bi bi-check-circle"></i> Mark as Delivered
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>