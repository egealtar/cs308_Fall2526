@model List<CS308Main.Models.Invoice>

@{
    ViewData["Title"] = "All Invoices";
    var dateFrom = ViewBag.DateFrom as string;
    var dateTo = ViewBag.DateTo as string;
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-file-earmark-text"></i> All Invoices</h3>
            <a asp-action="RevenueReport" class="btn btn-light btn-sm">
                <i class="bi bi-graph-up"></i> Revenue Report
            </a>
        </div>
        <div class="card-body">
            <!-- Hidden token for bulk operations -->
            @Html.AntiForgeryToken()
            
            <!-- Date Range Filter -->
            <form method="get" class="mb-4" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label for="dateFrom" class="form-label">From Date</label>
                        <input type="date" name="dateFrom" id="dateFrom" class="form-control" value="@dateFrom" />
                    </div>
                    <div class="col-md-4">
                        <label for="dateTo" class="form-label">To Date</label>
                        <input type="date" name="dateTo" id="dateTo" class="form-control" value="@dateTo" />
                    </div>
                    <div class="col-md-4 d-flex align-items-end">
                        <div class="d-grid gap-2 w-100">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-funnel"></i> Filter
                            </button>
                            <a asp-action="AllInvoices" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle"></i> Clear
                            </a>
                        </div>
                    </div>
                </div>
            </form>

            @if (Model == null || !Model.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No invoices found for the selected date range.
                </div>
            }
            else
            {
                <div class="mb-3 d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-primary">Total Invoices: @Model.Count</span>
                        <span class="badge bg-success ms-2">Total Amount: $@Model.Sum(i => i.TotalAmount).ToString("F2")</span>
                    </div>
                    <div>
                        <button type="button" class="btn btn-success btn-sm" onclick="saveAllAsPdf()" title="Save all invoices as PDF">
                            <i class="bi bi-file-pdf"></i> Save All as PDF
                        </button>
                        <button type="button" class="btn btn-info btn-sm" onclick="window.print()" title="Print this page">
                            <i class="bi bi-printer"></i> Print Page
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Invoice Number</th>
                                <th>Customer</th>
                                <th>Date</th>
                                <th>Total Amount</th>
                                <th>Items</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model)
                            {
                                <tr>
                                    <td><strong>@invoice.InvoiceNumber</strong></td>
                                    <td>@invoice.UserId</td>
                                    <td>@invoice.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td><strong class="text-success">$@invoice.TotalAmount.ToString("F2")</strong></td>
                                    <td>@invoice.Items.Count item(s)</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Download" asp-route-id="@invoice.Id" class="btn btn-sm btn-primary" title="Download PDF">
                                                <i class="bi bi-download"></i> PDF
                                            </a>
                                            <a asp-action="Print" asp-route-id="@invoice.Id" target="_blank" class="btn btn-sm btn-info" title="Print Invoice">
                                                <i class="bi bi-printer"></i> Print
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function saveAllAsPdf() {
            const dateFrom = document.getElementById('dateFrom')?.value || '';
            const dateTo = document.getElementById('dateTo')?.value || '';
            
            // Show loading
            const btn = event.target.closest('button');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Generating...';
            btn.disabled = true;

            // Create a form to download
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = '@Url.Action("BulkDownload", "Invoice")' + 
                         `?dateFrom=${dateFrom}&dateTo=${dateTo}`;
            form.style.display = 'none';
            
            // Add anti-forgery token
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            if (tokenInput) {
                const tokenClone = tokenInput.cloneNode(true);
                form.appendChild(tokenClone);
            }

            document.body.appendChild(form);
            form.submit();
            
            // Reset button after a delay
            setTimeout(() => {
                btn.innerHTML = originalText;
                btn.disabled = false;
                if (document.body.contains(form)) {
                    document.body.removeChild(form);
                }
            }, 3000);
        }
    </script>
}

@section Styles {
    <style>
        @@media print {
            .btn, .card-header .btn, form {
                display: none !important;
            }
            .card {
                border: none;
                box-shadow: none;
            }
        }
    </style>
}