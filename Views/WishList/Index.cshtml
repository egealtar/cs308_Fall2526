@model List<CS308Main.Models.WishListViewModel>

@{
    ViewData["Title"] = "My Wish List";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="bi bi-heart-fill"></i> My Wish List
                </h3>
                @if (Model.Any())
                {
                    <form asp-action="ClearWishList" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-outline-light btn-sm" 
                                onclick="return confirm('Are you sure you want to clear your wish list?')">
                            <i class="bi bi-trash"></i> Clear All
                        </button>
                    </form>
                }
            </div>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Info"] != null)
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="bi bi-info-circle"></i> @TempData["Info"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-heart" style="font-size: 5rem; color: #dc3545;"></i>
                    <h3 class="mt-3">Your wish list is empty</h3>
                    <p class="text-muted">Add products you love to your wish list!</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="bi bi-shop"></i> Start Shopping
                    </a>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm hover-card">
                                @if (item.HasDiscount)
                                {
                                    <span class="badge bg-danger position-absolute top-0 end-0 m-2" style="z-index: 10;">
                                        ON SALE!
                                    </span>
                                }
                                
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.ProductName" style="height: 200px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                        <i class="bi bi-image" style="font-size: 3rem;"></i>
                                    </div>
                                }

                                <div class="card-body">
                                    <h5 class="card-title">@item.ProductName</h5>
                                    
                                    <div class="mb-2">
                                        @if (item.HasDiscount)
                                        {
                                            <div>
                                                <span class="text-decoration-line-through text-muted">$@item.Price.ToString("F2")</span>
                                                <span class="h5 text-danger ms-2">$@item.DiscountedPrice?.ToString("F2")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="h5 text-success">$@item.Price.ToString("F2")</span>
                                        }
                                    </div>

                                    <p class="text-muted small mb-2">
                                        <i class="bi bi-calendar"></i> Added on @item.AddedAt.ToString("MMM dd, yyyy")
                                    </p>

                                    <div class="mb-3">
                                        @if (item.IsAvailable)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> In Stock (@item.QuantityInStock)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> Out of Stock
                                            </span>
                                        }
                                    </div>
                                </div>

                                <div class="card-footer bg-transparent">
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> View Details
                                        </a>
                                        
                                        @if (item.IsAvailable)
                                        {
                                            <form asp-action="MoveToCart" method="post">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    <i class="bi bi-cart-plus"></i> Move to Cart
                                                </button>
                                            </form>
                                        }

                                        <form asp-action="RemoveFromWishList" method="post">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                                <i class="bi bi-heart-fill"></i> Remove
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="alert alert-light mt-3">
                    <h6 class="fw-bold">
                        <i class="bi bi-info-circle"></i> Did you know?
                    </h6>
                    <p class="mb-0">You'll receive email notifications when products in your wish list go on sale!</p>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .hover-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .hover-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
    </style>
}