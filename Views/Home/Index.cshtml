@model IEnumerable<CS308Main.Models.Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-banner">
    <div class="hero-overlay"></div>
    <img src="~/images/maxresdefault.jpg" alt="MotorMatch Banner" class="hero-image">
    <div class="container">
        <div class="hero-content">
            <div class="hero-badge">
                <i class="bi bi-award-fill"></i>
                <span>Premium Quality Parts</span>
            </div>
            <h1 class="hero-title">
                <span class="hero-welcome">Welcome to</span>
                <span class="hero-brand">
                    <span class="brand-motor">Motor</span><span class="brand-match">Match</span>
                </span>
            </h1>
            <p class="hero-subtitle">
                <i class="bi bi-tools"></i>
                Quality Auto Parts at Unbeatable Prices
            </p>
            <div class="hero-features">
                <div class="feature-item">
                    <i class="bi bi-shield-check"></i>
                    <span>Warranty</span>
                </div>
                <div class="feature-item">
                    <i class="bi bi-truck"></i>
                    <span>Fast Shipping</span>
                </div>
                <div class="feature-item">
                    <i class="bi bi-headset"></i>
                    <span>24/7 Support</span>
                </div>
            </div>
            <a href="#partsList" class="hero-cta smooth-scroll">
                <span class="cta-text">Explore Parts</span>
                <i class="bi bi-arrow-right-circle-fill cta-icon"></i>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="filter-section">
        <div class="filter-card">
            <div class="filter-header">
                <h3 class="filter-title">
                    <i class="bi bi-funnel-fill"></i>
                    Find Your Perfect Part
                </h3>
                <p class="filter-subtitle">Use our advanced filters to find exactly what you need</p>
            </div>
            
            <div class="filter-body">
                <div class="search-container">
                    <div class="search-box">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" 
                               id="keywordInput" 
                               class="search-input" 
                               placeholder="Search by part name, brand, or model...">
                        <button id="searchBtn" class="search-button">
                            <span>Search</span>
                            <i class="bi bi-arrow-right"></i>
                        </button>
                    </div>
                </div>

                <div class="filters-row">
                    <div class="filter-group">
                        <label class="filter-label">
                            <i class="bi bi-sort-numeric-down"></i>
                            Price Range
                        </label>
                        <select id="priceOrder" class="filter-select">
                            <option value="">All Prices</option>
                            <option value="asc">Price: Low to High</option>
                            <option value="desc">Price: High to Low</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">
                            <i class="bi bi-star-fill"></i>
                            Popularity
                        </label>
                        <select id="ratingOrder" class="filter-select">
                            <option value="">All Items</option>
                            <option value="desc">Most Popular</option>
                            <option value="asc">Newest First</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">
                            <i class="bi bi-grid-3x3-gap-fill"></i>
                            Category
                        </label>
                        <div class="dropdown">
                            <button class="filter-dropdown" type="button" id="categoryDropdown" data-bs-toggle="dropdown">
                                <span>Choose Category</span>
                                <i class="bi bi-chevron-down"></i>
                            </button>
                            <div class="dropdown-menu category-dropdown" aria-labelledby="categoryDropdown">
                                <div class="dropdown-header">
                                    <i class="bi bi-collection"></i>
                                    <span>Select Categories</span>
                                </div>
                                <div class="category-list">
                                    @foreach (var genre in ViewBag.Genres)
                                    {
                                        <label class="category-item">
                                            <input class="category-checkbox" type="checkbox" 
                                                   id="cat-@genre.Replace(" ", "-")" value="@genre">
                                            <span class="category-name">@genre</span>
                                            <i class="bi bi-check-circle-fill category-check-icon"></i>
                                        </label>
                                    }
                                </div>
                                <div class="dropdown-footer">
                                    <button id="confirmFilters" class="btn-apply-filters">
                                        <i class="bi bi-check-lg"></i>
                                        Apply Filters
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label" style="visibility: hidden;">Reset</label>
                        <button id="clearFilters" class="btn-reset">
                            <i class="bi bi-arrow-clockwise"></i>
                            <span>Reset All</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="products-header">
        <h2 class="products-title">
            <i class="bi bi-grid-fill"></i>
            Available Parts
        </h2>
        <div class="products-count">
            <span class="count-badge">
                <i class="bi bi-bag-check-fill"></i>
                <span id="productCount">@Model.Count()</span> Products
            </span>
        </div>
    </div>

    <div id="partsList" class="products-grid">
        @if (Model != null && Model.Any())
        {
            @foreach (var product in Model)
            {
                <div class="product-card part-card" 
                    data-title="@product.Name" 
                    data-manufacturer="@product.Author" 
                    data-cost="@product.Price"
                    data-category="@product.Genre"
                    data-info="@product.Description"
                    data-rating="@(ViewBag.ProductPopularity != null && 
                                ViewBag.ProductPopularity.ContainsKey(product.Id) ? 
                                ViewBag.ProductPopularity[product.Id] : 0)">
                    <a href="@Url.Action("ProductDetails", "Product", new { id = product.Id })" 
                       class="product-link">
                        
                        <div class="product-image-wrapper">
                            @{
                                string imgPath = !string.IsNullOrEmpty(product.ImagePath) 
                                    ? product.ImagePath 
                                    : "/images/default-part.jpg";
                            }
                            
                            <img src="@imgPath" class="product-image" alt="@product.Name">
                            
                            <div class="product-badges">
                                @if (product.DiscountedPrice.HasValue && product.DiscountedPrice.Value > 0 && product.OriginalPrice > 0)
                                {
                                    var discountPercent = Math.Round((1 - (product.DiscountedPrice.Value / product.OriginalPrice)) * 100);
                                    <span class="badge-discount">
                                        <i class="bi bi-percent"></i>
                                        -@discountPercent% OFF
                                    </span>
                                }
                                
                                @if (product.QuantityInStock > 0)
                                {
                                    <span class="badge-stock in-stock">
                                        <i class="bi bi-check-circle-fill"></i>
                                        @product.QuantityInStock in Stock
                                    </span>
                                }
                                else
                                {
                                    <span class="badge-stock out-of-stock">
                                        <i class="bi bi-x-circle-fill"></i>
                                        Out of Stock
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <div class="product-content">
                            <div class="product-category">
                                <i class="bi bi-tag-fill"></i>
                                @product.Genre
                            </div>
                            
                            <h3 class="product-name">@product.Name</h3>
                            
                            <div class="product-manufacturer">
                                <i class="bi bi-building"></i>
                                <span>@product.Author</span>
                            </div>
                            
                            <p class="product-description">@product.Description</p>
                            
                            <div class="product-footer">
                                <div class="product-price">
                                    @if (product.DiscountedPrice.HasValue && product.DiscountedPrice.Value > 0)
                                    {
                                        <span class="price-original">$@product.OriginalPrice.ToString("F2")</span>
                                        <span class="price-current">$@product.DiscountedPrice.Value.ToString("F2")</span>
                                    }
                                    else if (product.Price > 0)
                                    {
                                        <span class="price-current">$@product.Price.ToString("F2")</span>
                                    }
                                    else
                                    {
                                        <span class="price-current text-muted">Contact for Price</span>
                                    }
                                </div>
                                
                                <button class="btn-view-details">
                                    <span>View Details</span>
                                    <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="bi bi-inbox"></i>
                </div>
                <h3 class="empty-title">No Parts Available</h3>
                <p class="empty-text">Please check back later for new products</p>
            </div>
        }
    </div>
</div>

