@section Scripts {
    <script>
        document.querySelectorAll('.smooth-scroll').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        $(document).ready(function() {
            function normalizeText(text) {
                return text.toLocaleLowerCase('tr-TR')
                    .replace(/ı/g, 'i')
                    .replace(/ş/g, 's')
                    .replace(/ç/g, 'c')
                    .replace(/ğ/g, 'g')
                    .replace(/ü/g, 'u')
                    .replace(/ö/g, 'o')
                    .replace(/[^a-z0-9\s]/gi, '')
                    .trim();
            }

            function updateProductCount() {
                const visibleCount = $('.part-card:visible').length;
                $('#productCount').text(visibleCount);
            }
            
            function executeFiltersAndSort() {
                var searchTerm = normalizeText($('#keywordInput').val()).toLowerCase();
                var priceDirection = $('#priceOrder').val();
                var ratingDirection = $('#ratingOrder').val();
                var selectedCategories = $('.category-checkbox:checked').map(function() {
                    return normalizeText($(this).val().toLowerCase());
                }).get();

                var searchWords = searchTerm.split(/\s+/).filter(word => word.length > 0);

                $('.part-card').each(function() {
                    var $card = $(this);
                    var partName = normalizeText(($card.data('title') || '').toLowerCase());
                    var partManufacturer = normalizeText(($card.data('manufacturer') || '').toLowerCase());
                    var partCategory = ($card.data('category') || '').toLowerCase();
                    var partDescription = normalizeText(($card.data('info') || '').toLowerCase());
                    
                    var categoryMatches = selectedCategories.length === 0 || 
                        (partCategory && selectedCategories.includes(partCategory));
                    
                    var searchMatches = searchWords.length === 0 || searchWords.every(word => 
                        partName.includes(word) || partManufacturer.includes(word) || partDescription.includes(word)
                    );
                    
                    $card.toggle(searchMatches && categoryMatches);
                });

                if (priceDirection) {
                    var visibleCards = $('.part-card:visible').get();
                    visibleCards.sort(function(cardA, cardB) {
                        var priceA = parseFloat($(cardA).data('cost')) || 0;
                        var priceB = parseFloat($(cardB).data('cost')) || 0;
                        return priceDirection === 'asc' ? priceA - priceB : priceB - priceA;
                    });
                    $('#partsList').html(visibleCards);
                } 
                else if (ratingDirection) {
                    var visibleCards = $('.part-card:visible').get();
                    visibleCards.sort(function(cardA, cardB) {
                        var ratingA = parseInt($(cardA).data('rating')) || 0;
                        var ratingB = parseInt($(cardB).data('rating')) || 0;
                        return ratingDirection === 'asc' ? ratingA - ratingB : ratingB - ratingA;
                    });
                    $('#partsList').empty().append(visibleCards);
                }

                updateProductCount();
            }

            let originalCardOrder = $('#partsList .part-card').toArray();

            $('#clearFilters').on('click', function() {
                $('#keywordInput').val('');
                $('#priceOrder').val('');
                $('#ratingOrder').val('');
                $('.dropdown-menu').removeClass('show');
                $('.category-checkbox').prop('checked', false);
                $('.part-card').show();
                
                $('#partsList').empty();
                originalCardOrder.forEach(function(card) {
                    $('#partsList').append(card);
                });
                
                updateProductCount();
            });

            $('#confirmFilters').on('click', function() {
                executeFiltersAndSort();
                $('.dropdown-menu').removeClass('show');
            });
            
            $('#searchBtn').on('click', executeFiltersAndSort);
            $('#priceOrder').on('change', executeFiltersAndSort);
            $('#ratingOrder').on('change', executeFiltersAndSort);
            
            $('#keywordInput').on('keypress', function(e) {
                if (e.which === 13) {
                    executeFiltersAndSort();
                }
            });

            updateProductCount();
        });
    </script>
